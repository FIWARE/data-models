{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "walk-speed",
    "title": "",
    "description": "This schema represents the average walking speed.",
    "type": "object",

    "references": [
        {
            "description": "The SNOMED code represents the walking performance (observable entity).",
            "url": "http://purl.bioontology.org/ontology/SNOMEDCT/129006008"
        }
    ],

    "definitions": {
        "durationUnitValue": {
            "$ref": "http://www.openmhealth.org/schema/omh/duration-unit-value-1.0.json"
        }
    },

    "properties": {
        "walkSpeed": {
            "allOf": [
                {
                    "$ref": "#/definitions/durationUnitValue"
                },
                {
                    "properties": {
                        "unit": {
                            "enum": [
                                "sec",
                                "min",
                                "h"
                            ]
                        }
                    }
                }
            ]
        }
    },

    "required": [
        "walkSpeed"
    ]
}