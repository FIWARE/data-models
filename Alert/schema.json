{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://fiware.github.io/dataModels/Alert/schema.json",
  "title": "Alert data model JSON Schema",
  "description": "An alert generated by a user or device in a given location",
  "type": "object",
   "allOf": [
    {
      "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/GSMA-Commons"
    },
    {
      "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/Location-Commons"
    },
    {
      "properties": {
        "description": {
          "type": "string"
        },
        "dateIssued": {
          "type": "string",
          "format": "date-time"
        },
        "validFrom": {
          "type": "string",
          "format": "date-time"
        },
        "validTo": {
          "type": "string",
          "format": "date-time"
        },
        "severity": {
          "type": "string",
          "enum": [
            "informational",
            "low",
            "medium",
            "high",
            "critical"
          ]
        },
        "category": {
          "type": "string",
          "enum": [
            "traffic",
            "weather",
            "environment",
            "health",
            "security"
          ]
        },
        "subCategory": {
          "allOf": [
            {
              "type": "string",
              "enum": [
                "trafficJam",
                "carAccident",
                "carWrongDirection",
                "carStopped",
                "pothole",
                "roadClosed",
                "roadWorks",
                "hazardOnRoad",
                "injuredBiker",
                "asthmaAttack",
                "bumpedPatient",
                "fallenPatient",
                "heartAttack",
                "suspiciousAction",
                "robbery",
                "assault"
              ]
            },
            {
              "$ref": "https://fiware.github.io/dataModels/Weather/weather-schema.json#/definitions/WeatherAlertCategories"
            }
          ]
        },
        "alertSource": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri"
            },
            {
              "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/EntityIdentifierType"
            }
          ]
        },
        "data": {
          "type": "object"
        },
        "type": {
          "type": "string",
          "enum": [
            "Alert"
          ],
          "description": "NGSI Entity type"
        }
      }
    }
  ],
  "oneOf": [
    {
      "required": [
        "id",
        "type",
        "location",
        "alertSource",
        "category",
        "dateIssued"
      ]
    },
    {
      "required": [
        "id",
        "type",
        "address",
        "alertSource",
        "category",
        "dateIssued"
      ]
    }
  ]
}
