{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://raw.githubusercontent.com/Ficodes/dataModels/agriDataModels/specs/AgriFood/AgriParcelRecord/schema.json",
    "title": "FIWARE - Agri Parcel Record",
    "description": "This entity contains a harmonised description of the conditions recorded on a parcel of land. This entity is primarily associated with the agricultural vertical and related IoT applications.",
    "type": "object",
    "allOf": [
	{ "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/GSMA-Commons" },
        { "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/Location-Commons" },
        { "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/PhysicalObject-Commons" },
	{
	    "properties": {
		"id": {
                    "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/GSMA-Commons/properties/id"
                },
                "type": {
                    "type": "string",
                    "enum": ["AgriParcelRecord"],
                    "description": "NGSI Entity Type"
                },
		"agriParcel": {
                    "type": "string",
                    "format": "uri"
                },
		"location": {
		    "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/Location-Commons/properties/location"
		},
		"soilTemperature": {
		    "type": "object",
		    "values": {
			"value": {
			    "type": "number"
			},
			"unitCode": {
			    "type": "string",
			    "enum": ["CEL"]
			},
			"observedAt": {
			    "type": "string",
			    "format": "date-time"
			}
		    },
		    "required": ["value", "unitCode", "observedAt"]
		},
		"soilMoistureVwc": {
		    "type": "object",
		    "values": {
			"value": {
			    "type": "number",
			    "minimum": 0,
			    "maximum": 1
			},
			"unitCode": {
			    "type": "string",
			    "enum": ["C62"]
			},
			"observedAt": {
			    "type": "string",
			    "format": "date-time"
			}
		    },
		    "required": ["value", "unitCode", "observedAt"]
		},
		"soilMoistureEC": {
		    "type": "object",
		    "values": {
			"value": {
			    "type": "number",
			},
			"unitCode": {
			    "type": "string",
			    "enum": ["CEL"]
			},
			"observedAt": {
			    "type": "string",
			    "format": "date-time"
			}
		    },
		    "required": ["value", "unitCode", "observedAt"]
		},
		"solarRadiaton": {
		    "type": "object",
		    "values": {
			"value": {
			    "type": "number",
			},
			"unitCode": {
			    "type": "string",
			    "enum": ["CEL"]
			},
			"observedAt": {
			    "type": "string",
			    "format": "date-time"
			}
		    },
		    "required": ["value", "unitCode", "observedAt"]
		},
		"relativeHumidity": {
		    "type": "object",
		    "values": {
			"value": {
			    "type": "number",
			    "minimum": 0.0,
			    "maximum": 1.0
			},
			"unitCode": {
			    "type": "string"
			},
			"observedAt": {
			    "type": "string",
			    "format": "date-time"
			}
		    },
		    "required": ["value", "unitCode", "observedAt"]
		},
		"atmosphericPressure": {
		    "type": "object",
		    "values": {
			"value": {
			    "type": "number",
			},
			"unitCode": {
			    "type": "string",
			    "enum": ["A97"]
			},
			"observedAt": {
			    "type": "string",
			    "format": "date-time"
			}
		    },
		    "required": ["value", "unitCode", "observedAt"]
		},
		"description": {
		    "type": "string"
		},
		"devices": {
		    "type": "array",
		    "items": [{
			"type": "string",
			"format": "uri"
		    }]
		},
		"observedAt": {
		    "type": "string",
		    "format": "date-time"
		}
	    }
	}
    ],
    "required": ["id", "type", "agriParcel", "location"]
}
