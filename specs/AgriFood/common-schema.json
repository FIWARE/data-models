{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://raw.githubusercontent.com/Ficodes/dataModels/agriDataModels/specs/AgriFood/common-schema.json",
    "title": "FIWARE - Agri Food Common Schema",
    "description": "Common NGSI-LD validators used in Agri Food data models",
    "type": "object",
    "definitions": {
	"PropertyString": {
	    "type": "object",
	    "properties": {
		"type": {
		    "type": "string",
		    "enum": ["Property"]
		},
		"value": {
		    "type": "string"
		}
	    },
	    "required": ["type", "value"]
	},
	"Relationship": {
	    "type": "object",
	    "properties": {
		"type": {
		    "type": "string",
		    "enum": ["Relationship"]
		},
		"object": {
		    "type": "array",
		    "items": [{
			"type": "string",
			"format": "uri"
		    }]
		}
	    },
	    "required": ["type", "object"]
	},
	"Interval": {
	    "type": "array",
	    "items": [
		{
		    "type": "object",
		    "values": {
			"dateRange": {
			    "type": "string",
			    "pattern": "^-[0-1][0-9]-[0-3][0-9]$"
			},
			"description": {
			    "type": "string"
			}
		    }
		}
	    ],
	    "minItems": 2,
	    "maxItems": 2
	}
    }
}

